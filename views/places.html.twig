<html>
<head>
    <title>Places We've Been</title>
</head>
<body>
    <h1>Places We've Been</h1>
    {% if places is not empty %}
        <p>Here are all of your places:</p>
        <ul>
            {% for place in places %}
                <li>{{ place.getName }}</li>
                <li>{{ place.getDuration }}</li>
                <li><img src='{{ place.getImage }}'></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/places' method='post'>
        <label for='name'>Place Name</label>
        <input id='name' name='name' type='text'>

        <label for='duration'>Duration of stay</label>
        <input id='duration' name='duration' type='text'>

        <label for='image'>Image of place</label>
        <input id='image' name='image' type='text'>

        <button type='submit'>Submit</button>
    </form>

    <form action='/delete_places' method='post'>
        <button type='submit'>Delete</button>
</body>
</html>
